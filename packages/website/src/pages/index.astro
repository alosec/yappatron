---
import content from '../content.json';

const { name, tagline, description, badges, features, steps, requirements, terminal, themes } = content;
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={`${name} - ${description}`} />
  <title>{name}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Newsreader:ital,opsz,wght@0,6..72,300;0,6..72,400;1,6..72,300&family=DM+Mono:wght@400&display=swap" rel="stylesheet">
</head>
<body>
  <div class="page">
    <div class="breath"></div>
    
    <header>
      <div class="theme-dots">
        {themes.map((t, i) => (
          <button 
            class={`dot ${i === 0 ? 'active' : ''}`} 
            data-theme={t.id}
            style={`--dot-color: ${t.accent}`}
            aria-label={t.id}
          />
        ))}
      </div>
    </header>

    <main>
      <section class="hero">
        <div class="wordmark">{name}</div>
        <p class="tagline">{tagline}</p>
        <p class="desc">{description}</p>
        
        <div class="pills">
          {badges.map(b => <span class="pill">{b.label}</span>)}
        </div>

        <div class="ctas">
          <a href="https://github.com/alosec/yappatron" class="cta primary">github</a>
          <a href="#install" class="cta">get started</a>
        </div>
      </section>

      <div class="divider"><span></span></div>

      <section>
        <h2>features</h2>
        <div class="feature-list">
          {features.map(f => (
            <div class="feature-item">
              <h3>{f.title}</h3>
              <p>{f.body}</p>
            </div>
          ))}
        </div>
      </section>

      <div class="divider"><span></span></div>

      <section>
        <h2>how it works</h2>
        <div class="term">
          <div class="term-line">
            {terminal.map(line => {
              if (line.type === 'prompt') return <span class="t-prompt">{line.text}</span>;
              if (line.type === 'command') return <span class="t-cmd">{line.text}</span>;
              if (line.type === 'speech') return <><span class="t-bracket">[speaking] </span><span class="t-speech">{line.text}</span></>;
              return <span class="t-out">{line.text || '\u00A0'}</span>;
            })}
          </div>
        </div>
        <ol class="steps">
          {steps.map((s, i) => (
            <li>
              <strong>{s.label}</strong>
              <span>{s.detail}</span>
            </li>
          ))}
        </ol>
      </section>

      <div class="divider"><span></span></div>

      <section id="install">
        <h2>install</h2>
        <pre><code>git clone https://github.com/alosec/yappatron
cd yappatron/packages/app/Yappatron
swift build</code></pre>
        <h3>requirements</h3>
        <ul>
          {requirements.map(r => <li>{r}</li>)}
        </ul>
      </section>

      <div class="divider"><span></span></div>

      <section>
        <h2>philosophy</h2>
        <blockquote>The best interface is no interface.</blockquote>
        <p>Voice dictation should be invisible. Think, speak, words appear. No buttons, no modes, no cognitive load.</p>
      </section>
    </main>

    <footer>
      <p>made for yappers 路 <a href="https://github.com/alosec/yappatron">github</a> 路 MIT 路 free forever</p>
    </footer>
  </div>

  <style>
    :root {
      --bg: #faf9f7;
      --surface: #ffffff;
      --text: #1a1a1a;
      --text-2: #666;
      --text-3: #999;
      --border: #e5e5e5;
      --accent: #94a3b8;
      --radius: 4px;
    }

    [data-theme="mist"] { --accent: #94a3b8; }
    [data-theme="lotus"] { --accent: #d97aa6; }
    [data-theme="ember"] { --accent: #d97706; }
    [data-theme="moss"] { --accent: #059669; }
    [data-theme="depth"] { --accent: #0284c7; }

    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #0f0f0f;
        --surface: #1a1a1a;
        --text: #e5e5e5;
        --text-2: #999;
        --text-3: #666;
        --border: #2a2a2a;
      }
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      font-size: 18px;
      -webkit-font-smoothing: antialiased;
    }

    body {
      font-family: 'Newsreader', Georgia, serif;
      background: var(--bg);
      color: var(--text);
      line-height: 1.7;
      min-height: 100vh;
    }

    .page {
      max-width: 600px;
      margin: 0 auto;
      padding: 3rem 1.5rem 4rem;
      position: relative;
    }

    /* Breathing animation - the soul of yappatron */
    .breath {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 300px;
      height: 300px;
      background: radial-gradient(circle, var(--accent) 0%, transparent 70%);
      opacity: 0.03;
      border-radius: 50%;
      pointer-events: none;
      animation: breathe 8s ease-in-out infinite;
      z-index: -1;
    }

    @keyframes breathe {
      0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.03; }
      50% { transform: translate(-50%, -50%) scale(1.3); opacity: 0.06; }
    }

    /* Header */
    header {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 4rem;
    }

    .theme-dots {
      display: flex;
      gap: 0.5rem;
    }

    .dot {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      border: 1.5px solid var(--border);
      background: transparent;
      cursor: pointer;
      transition: all 0.2s;
      padding: 0;
    }

    .dot:hover {
      border-color: var(--dot-color);
    }

    .dot.active {
      background: var(--dot-color);
      border-color: var(--dot-color);
    }

    /* Hero */
    .hero {
      text-align: center;
      margin-bottom: 1rem;
    }

    .wordmark {
      font-size: 3.5rem;
      font-weight: 300;
      letter-spacing: -0.03em;
      margin-bottom: 0.25rem;
      color: var(--text);
    }

    .tagline {
      font-size: 1.5rem;
      font-style: italic;
      font-weight: 300;
      color: var(--text-2);
      margin-bottom: 1rem;
    }

    .desc {
      color: var(--text-2);
      max-width: 320px;
      margin: 0 auto 1.5rem;
      font-size: 1rem;
    }

    .pills {
      display: flex;
      gap: 0.5rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 2rem;
    }

    .pill {
      font-family: 'DM Mono', monospace;
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      padding: 0.35rem 0.65rem;
      border: 1px solid var(--border);
      border-radius: 2px;
      color: var(--text-3);
    }

    .ctas {
      display: flex;
      gap: 0.75rem;
      justify-content: center;
    }

    .cta {
      font-family: 'DM Mono', monospace;
      font-size: 0.8rem;
      padding: 0.65rem 1.25rem;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      color: var(--text);
      text-decoration: none;
      transition: all 0.15s;
    }

    .cta:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .cta.primary {
      background: var(--text);
      color: var(--bg);
      border-color: var(--text);
    }

    .cta.primary:hover {
      background: var(--accent);
      border-color: var(--accent);
      color: var(--bg);
    }

    /* Sections */
    section {
      margin: 2.5rem 0;
    }

    h2 {
      font-size: 0.7rem;
      font-weight: 400;
      text-transform: uppercase;
      letter-spacing: 0.15em;
      color: var(--text-3);
      margin-bottom: 1.5rem;
      font-family: 'DM Mono', monospace;
    }

    h3 {
      font-size: 1rem;
      font-weight: 400;
      margin: 1.5rem 0 0.5rem;
    }

    p {
      color: var(--text-2);
      margin-bottom: 1rem;
    }

    /* Divider */
    .divider {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 3rem 0;
    }

    .divider span {
      width: 4px;
      height: 4px;
      background: var(--border);
      border-radius: 50%;
    }

    /* Features */
    .feature-list {
      display: grid;
      gap: 1.5rem;
    }

    .feature-item h3 {
      font-size: 1rem;
      margin: 0 0 0.25rem;
      color: var(--text);
    }

    .feature-item p {
      margin: 0;
      font-size: 0.95rem;
    }

    /* Terminal */
    .term {
      font-family: 'DM Mono', monospace;
      font-size: 0.8rem;
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 1.25rem;
      margin-bottom: 1.5rem;
      overflow-x: auto;
    }

    .term-line {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .t-prompt { color: var(--accent); }
    .t-cmd { color: var(--text); }
    .t-out { color: var(--text-3); }
    .t-bracket { color: var(--text-3); }
    .t-speech { color: var(--accent); }

    /* Steps */
    .steps {
      list-style: none;
      counter-reset: step;
    }

    .steps li {
      counter-increment: step;
      display: flex;
      flex-direction: column;
      margin-bottom: 0.75rem;
      padding-left: 1.75rem;
      position: relative;
    }

    .steps li::before {
      content: counter(step);
      position: absolute;
      left: 0;
      font-family: 'DM Mono', monospace;
      font-size: 0.7rem;
      color: var(--text-3);
    }

    .steps strong {
      font-weight: 400;
      color: var(--text);
    }

    .steps span {
      font-size: 0.9rem;
      color: var(--text-2);
    }

    /* Code */
    pre {
      font-family: 'DM Mono', monospace;
      font-size: 0.8rem;
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 1rem;
      overflow-x: auto;
      margin-bottom: 1.5rem;
    }

    code {
      font-family: inherit;
      color: var(--text-2);
    }

    ul {
      list-style: none;
    }

    ul li {
      padding-left: 1rem;
      position: relative;
      color: var(--text-2);
      margin-bottom: 0.35rem;
    }

    ul li::before {
      content: '路';
      position: absolute;
      left: 0;
      color: var(--text-3);
    }

    blockquote {
      font-style: italic;
      color: var(--text-2);
      padding-left: 1rem;
      border-left: 2px solid var(--border);
      margin: 1.5rem 0;
    }

    /* Footer */
    footer {
      margin-top: 4rem;
      text-align: center;
    }

    footer p {
      font-size: 0.85rem;
      color: var(--text-3);
    }

    footer a {
      color: var(--text-2);
      text-decoration: none;
    }

    footer a:hover {
      color: var(--accent);
    }

    /* Mobile */
    @media (max-width: 600px) {
      html { font-size: 16px; }
      
      .page { padding: 2rem 1.25rem 3rem; }
      
      header { margin-bottom: 3rem; }
      
      .wordmark { font-size: 2.75rem; }
      
      .tagline { font-size: 1.25rem; }
      
      .ctas { flex-direction: column; }
      
      .cta { text-align: center; }
      
      .breath { width: 200px; height: 200px; }
      
      .pill { font-size: 0.65rem; padding: 0.3rem 0.5rem; }
    }
  </style>

  <script>
    const dots = document.querySelectorAll('.dot');
    const saved = localStorage.getItem('yappatron-theme') || 'mist';
    
    document.documentElement.dataset.theme = saved;
    dots.forEach(d => d.classList.toggle('active', d.dataset.theme === saved));
    
    dots.forEach(dot => {
      dot.addEventListener('click', () => {
        const theme = dot.dataset.theme;
        document.documentElement.dataset.theme = theme;
        localStorage.setItem('yappatron-theme', theme);
        dots.forEach(d => d.classList.toggle('active', d === dot));
      });
    });
  </script>
</body>
</html>
