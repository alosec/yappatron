---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Yappatron - Open-source always-on voice dictation. No hotkeys, no togglesâ€”just yap." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <style>
      :root {
        --pink: #f472b6;
        --pink-dim: #be185d;
        --bg: #0f0f0f;
        --surface: #1a1a1a;
        --border: #2a2a2a;
        --text: #fafafa;
        --text-dim: #888;
        --radius: 8px;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 17px;
        -webkit-font-smoothing: antialiased;
      }

      body {
        font-family: 'Space Grotesk', system-ui, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        min-height: 100vh;
        padding: 2rem 1rem;
      }

      .container {
        max-width: 640px;
        margin: 0 auto;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 3rem 2.5rem;
      }

      main {
        
      }

      h1, h2, h3 {
        font-weight: 600;
        line-height: 1.2;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
      }

      h2 {
        font-size: 1.25rem;
        color: var(--pink);
        margin: 3rem 0 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      h3 {
        font-size: 1rem;
        margin: 1.5rem 0 0.5rem;
      }

      p {
        margin-bottom: 1rem;
        color: var(--text-dim);
      }

      a {
        color: var(--pink);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      strong {
        color: var(--text);
        font-weight: 500;
      }

      hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 3rem 0;
      }

      ul, ol {
        margin: 0 0 1.5rem 1.25rem;
        color: var(--text-dim);
      }

      li {
        margin-bottom: 0.5rem;
      }

      li strong {
        color: var(--pink);
      }

      blockquote {
        border-left: 2px solid var(--pink);
        padding-left: 1rem;
        margin: 1.5rem 0;
        color: var(--text-dim);
        font-style: italic;
      }

      code {
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.85em;
        background: var(--surface);
        padding: 0.2em 0.4em;
        border-radius: 4px;
        color: var(--pink);
      }

      pre {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1rem;
        overflow-x: auto;
        margin: 1rem 0 1.5rem;
      }

      pre code {
        background: none;
        padding: 0;
        color: var(--text-dim);
        font-size: 0.8rem;
      }

      /* Hero */
      .hero {
        text-align: center;
        padding: 2rem 0 1rem;
      }

      .hero h1 {
        color: var(--text);
      }

      .hero h1 span {
        color: var(--pink);
      }

      .tagline {
        font-size: 1.5rem;
        color: var(--text);
        margin-bottom: 0.5rem;
      }

      .hero p {
        font-size: 1.1rem;
      }

      .buttons {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-top: 1.5rem;
        flex-wrap: wrap;
      }

      .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius);
        font-weight: 500;
        font-size: 0.95rem;
        transition: opacity 0.15s;
      }

      .btn:hover {
        text-decoration: none;
        opacity: 0.85;
      }

      .btn-primary {
        background: var(--pink);
        color: var(--bg);
      }

      .btn-secondary {
        background: var(--surface);
        border: 1px solid var(--border);
        color: var(--text);
      }

      /* Features */
      .features {
        display: grid;
        gap: 1px;
        background: var(--border);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
        margin: 1.5rem 0;
      }

      .feature {
        background: var(--surface);
        padding: 1.25rem;
      }

      .feature h3 {
        margin: 0 0 0.25rem;
        font-size: 0.95rem;
        color: var(--text);
      }

      .feature p {
        margin: 0;
        font-size: 0.9rem;
        color: var(--text-dim);
      }

      /* Terminal */
      .terminal {
        background: #0d0d0d;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1rem;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        margin: 1.5rem 0;
        overflow-x: auto;
      }

      .terminal p {
        margin: 0;
        color: var(--text-dim);
        white-space: pre;
      }

      .terminal .prompt {
        color: var(--pink);
      }

      .terminal .output {
        color: #4ade80;
      }

      /* Footer */
      footer {
        text-align: center;
        padding: 2rem 0;
        color: var(--text-dim);
        font-size: 0.85rem;
      }

      footer p {
        margin-bottom: 0.25rem;
      }

      /* Mobile */
      @media (max-width: 600px) {
        html {
          font-size: 16px;
        }

        body {
          padding: 1rem 0.75rem;
        }

        .container {
          padding: 2rem 1.25rem;
          border-radius: 12px;
        }

        h1 {
          font-size: 2rem;
        }

        .tagline {
          font-size: 1.25rem;
        }

        .buttons {
          flex-direction: column;
        }

        .btn {
          width: 100%;
          text-align: center;
        }

        h2 {
          margin-top: 2rem;
        }

        .terminal {
          font-size: 0.7rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
