---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="yappatron - Open-source always-on voice dictation for macOS. No hotkeys, no toggles—just yap." />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600&family=IBM+Plex+Mono:wght@400;500&display=swap" rel="stylesheet">
    <style>
      :root {
        --radius: 6px;
        --text: #e8e6e3;
        --text-dim: #8a8a8a;
      }

      /* Themes - renamed for TNG vibe */
      [data-theme="lotus"] {
        --accent: #e879a9;
        --accent-glow: rgba(232, 121, 169, 0.15);
        --bg: #0a0a0c;
        --surface: #12121a;
        --border: #1e1e2a;
      }

      [data-theme="nebula"] {
        --accent: #a78bfa;
        --accent-glow: rgba(167, 139, 250, 0.15);
        --bg: #08080d;
        --surface: #101018;
        --border: #1a1a28;
      }

      [data-theme="amber"] {
        --accent: #f59e0b;
        --accent-glow: rgba(245, 158, 11, 0.15);
        --bg: #0a0908;
        --surface: #141210;
        --border: #262218;
      }

      [data-theme="jade"] {
        --accent: #34d399;
        --accent-glow: rgba(52, 211, 153, 0.15);
        --bg: #080a08;
        --surface: #101410;
        --border: #182818;
      }

      [data-theme="ice"] {
        --accent: #38bdf8;
        --accent-glow: rgba(56, 189, 248, 0.15);
        --bg: #080a0c;
        --surface: #101418;
        --border: #182028;
      }

      /* Default */
      :root {
        --accent: #e879a9;
        --accent-glow: rgba(232, 121, 169, 0.15);
        --bg: #0a0a0c;
        --surface: #12121a;
        --border: #1e1e2a;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 17px;
        -webkit-font-smoothing: antialiased;
      }

      body {
        font-family: 'Outfit', system-ui, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.65;
        min-height: 100vh;
        padding: 0 1rem;
      }

      /* Subtle grid background */
      body::before {
        content: '';
        position: fixed;
        inset: 0;
        background-image: 
          linear-gradient(var(--border) 1px, transparent 1px),
          linear-gradient(90deg, var(--border) 1px, transparent 1px);
        background-size: 60px 60px;
        opacity: 0.3;
        pointer-events: none;
        z-index: -1;
      }

      .container {
        max-width: 680px;
        margin: 4rem auto;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 3rem;
        position: relative;
        box-shadow: 
          0 0 0 1px var(--border),
          0 20px 50px -20px rgba(0,0,0,0.5);
      }

      /* Accent bar at top */
      .container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 2rem;
        right: 2rem;
        height: 2px;
        background: linear-gradient(90deg, transparent, var(--accent), transparent);
        border-radius: 0 0 2px 2px;
      }

      h1, h2, h3 {
        font-weight: 500;
        line-height: 1.2;
        letter-spacing: -0.01em;
      }

      h1 {
        font-size: 2.75rem;
        font-weight: 300;
        margin-bottom: 0.5rem;
      }

      h2 {
        font-size: 0.75rem;
        color: var(--accent);
        margin: 3rem 0 1.25rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-weight: 500;
      }

      h3 {
        font-size: 1rem;
        margin: 1.5rem 0 0.5rem;
        color: var(--text);
      }

      p {
        margin-bottom: 1rem;
        color: var(--text-dim);
        font-weight: 300;
      }

      a {
        color: var(--accent);
        text-decoration: none;
        transition: opacity 0.15s;
      }

      a:hover {
        opacity: 0.8;
      }

      strong {
        color: var(--text);
        font-weight: 500;
      }

      hr {
        border: none;
        height: 1px;
        background: var(--border);
        margin: 2.5rem 0;
      }

      ul, ol {
        margin: 0 0 1.5rem 1.25rem;
        color: var(--text-dim);
        font-weight: 300;
      }

      li {
        margin-bottom: 0.5rem;
      }

      li strong {
        color: var(--accent);
        font-weight: 500;
      }

      blockquote {
        border-left: 2px solid var(--accent);
        padding-left: 1.25rem;
        margin: 1.5rem 0;
        color: var(--text-dim);
        font-style: italic;
        font-weight: 300;
      }

      code {
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.85em;
        background: var(--bg);
        padding: 0.2em 0.5em;
        border-radius: 4px;
        color: var(--accent);
      }

      pre {
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1.25rem;
        overflow-x: auto;
        margin: 1rem 0 1.5rem;
      }

      pre code {
        background: none;
        padding: 0;
        color: var(--text-dim);
        font-size: 0.8rem;
      }

      /* Hero */
      .hero {
        text-align: center;
        padding: 1rem 0 0.5rem;
      }

      .lotus {
        font-size: 3rem;
        display: block;
        margin-bottom: 0.5rem;
        filter: drop-shadow(0 0 20px var(--accent-glow));
      }

      .hero h1 {
        color: var(--text);
        font-weight: 300;
      }

      .tagline {
        font-size: 1.4rem;
        color: var(--text);
        margin-bottom: 0.75rem;
        font-weight: 400;
      }

      .hero > p {
        font-size: 1.05rem;
        max-width: 360px;
        margin: 0 auto 1rem;
      }

      .badges {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin: 1.5rem 0;
        flex-wrap: wrap;
      }

      .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.4rem 0.75rem;
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: 100px;
        font-size: 0.75rem;
        color: var(--text-dim);
        font-weight: 400;
        letter-spacing: 0.02em;
      }

      .badge svg {
        width: 14px;
        height: 14px;
        opacity: 0.7;
      }

      .buttons {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        margin-top: 1.75rem;
        flex-wrap: wrap;
      }

      .btn {
        display: inline-block;
        padding: 0.8rem 1.75rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.15s;
        letter-spacing: 0.01em;
      }

      .btn:hover {
        text-decoration: none;
        transform: translateY(-1px);
      }

      .btn-primary {
        background: var(--accent);
        color: var(--bg);
        box-shadow: 0 4px 20px -4px var(--accent-glow);
      }

      .btn-primary:hover {
        box-shadow: 0 8px 30px -4px var(--accent-glow);
        opacity: 1;
      }

      .btn-secondary {
        background: transparent;
        border: 1px solid var(--border);
        color: var(--text);
      }

      .btn-secondary:hover {
        border-color: var(--accent);
        opacity: 1;
      }

      /* Features */
      .features {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1px;
        background: var(--border);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        overflow: hidden;
        margin: 1.5rem 0;
      }

      .feature {
        background: var(--bg);
        padding: 1.25rem;
      }

      .feature h3 {
        margin: 0 0 0.35rem;
        font-size: 0.9rem;
        color: var(--text);
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .feature h3 span {
        font-size: 1rem;
      }

      .feature p {
        margin: 0;
        font-size: 0.85rem;
        color: var(--text-dim);
      }

      /* Terminal */
      .terminal {
        background: #050508;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1.25rem;
        font-family: 'IBM Plex Mono', monospace;
        font-size: 0.8rem;
        margin: 1.5rem 0;
        overflow-x: auto;
        position: relative;
      }

      .terminal::before {
        content: '●  ●  ●';
        position: absolute;
        top: 0.75rem;
        left: 1rem;
        font-size: 0.5rem;
        color: var(--border);
        letter-spacing: 0.25em;
      }

      .terminal-content {
        margin-top: 1rem;
      }

      .terminal p {
        margin: 0;
        color: var(--text-dim);
        white-space: pre;
        font-weight: 400;
      }

      .terminal .prompt {
        color: var(--accent);
      }

      .terminal .output {
        color: #34d399;
      }

      /* Footer */
      footer {
        text-align: center;
        padding: 2rem 0 0;
        color: var(--text-dim);
        font-size: 0.8rem;
      }

      footer p {
        margin-bottom: 0.25rem;
        font-weight: 300;
      }

      /* Theme Picker */
      .theme-picker {
        position: absolute;
        top: 1.25rem;
        right: 1.25rem;
        z-index: 100;
      }

      .theme-toggle {
        background: var(--bg);
        border: 1px solid var(--border);
        border-radius: 6px;
        padding: 0.4rem 0.7rem;
        color: var(--text-dim);
        font-size: 0.7rem;
        font-family: inherit;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        transition: border-color 0.15s;
        text-transform: lowercase;
        letter-spacing: 0.05em;
      }

      .theme-toggle:hover {
        border-color: var(--accent);
      }

      .theme-toggle .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--accent);
      }

      .theme-dropdown {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 0.4rem;
        display: none;
        flex-direction: column;
        gap: 0.15rem;
        min-width: 110px;
        box-shadow: 0 12px 32px rgba(0,0,0,0.5);
      }

      .theme-picker.open .theme-dropdown {
        display: flex;
      }

      .theme-option {
        background: none;
        border: none;
        padding: 0.45rem 0.65rem;
        color: var(--text-dim);
        font-size: 0.75rem;
        font-family: inherit;
        cursor: pointer;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: background 0.1s;
        text-align: left;
        text-transform: lowercase;
        letter-spacing: 0.03em;
      }

      .theme-option:hover {
        background: var(--bg);
      }

      .theme-option.active {
        color: var(--text);
      }

      .theme-option .swatch {
        width: 10px;
        height: 10px;
        border-radius: 50%;
      }

      .theme-option[data-theme="lotus"] .swatch { background: #e879a9; }
      .theme-option[data-theme="nebula"] .swatch { background: #a78bfa; }
      .theme-option[data-theme="amber"] .swatch { background: #f59e0b; }
      .theme-option[data-theme="jade"] .swatch { background: #34d399; }
      .theme-option[data-theme="ice"] .swatch { background: #38bdf8; }

      /* Mobile */
      @media (max-width: 600px) {
        html {
          font-size: 16px;
        }

        body {
          padding: 0 0.75rem;
        }

        body::before {
          background-size: 40px 40px;
        }

        .container {
          padding: 2rem 1.5rem;
          border-radius: 10px;
          margin: 2rem auto 3rem;
        }

        h1 {
          font-size: 2.25rem;
        }

        .lotus {
          font-size: 2.5rem;
        }

        .tagline {
          font-size: 1.2rem;
        }

        .badges {
          gap: 0.5rem;
        }

        .badge {
          font-size: 0.7rem;
          padding: 0.35rem 0.6rem;
        }

        .buttons {
          flex-direction: column;
        }

        .btn {
          width: 100%;
          text-align: center;
        }

        .features {
          grid-template-columns: 1fr;
        }

        h2 {
          margin-top: 2rem;
        }

        .terminal {
          font-size: 0.7rem;
        }

        .theme-picker {
          top: 1rem;
          right: 1rem;
        }
      }
    </style>
  </head>
  <body data-theme="lotus">
    <div class="container">
      <div class="theme-picker">
        <button class="theme-toggle">
          <span class="dot"></span>
          <span class="label">lotus</span>
        </button>
        <div class="theme-dropdown">
          <button class="theme-option active" data-theme="lotus"><span class="swatch"></span>lotus</button>
          <button class="theme-option" data-theme="nebula"><span class="swatch"></span>nebula</button>
          <button class="theme-option" data-theme="amber"><span class="swatch"></span>amber</button>
          <button class="theme-option" data-theme="jade"><span class="swatch"></span>jade</button>
          <button class="theme-option" data-theme="ice"><span class="swatch"></span>ice</button>
        </div>
      </div>
      <slot />
    </div>

    <script>
      const picker = document.querySelector('.theme-picker');
      const toggle = document.querySelector('.theme-toggle');
      const label = toggle.querySelector('.label');
      const options = document.querySelectorAll('.theme-option');
      const body = document.body;
      
      const saved = localStorage.getItem('yappatron-theme') || 'lotus';
      body.dataset.theme = saved;
      label.textContent = saved;
      options.forEach(opt => opt.classList.toggle('active', opt.dataset.theme === saved));
      
      toggle.addEventListener('click', (e) => {
        e.stopPropagation();
        picker.classList.toggle('open');
      });
      
      document.addEventListener('click', () => picker.classList.remove('open'));
      
      options.forEach(opt => {
        opt.addEventListener('click', (e) => {
          e.stopPropagation();
          const theme = opt.dataset.theme;
          body.dataset.theme = theme;
          localStorage.setItem('yappatron-theme', theme);
          label.textContent = theme;
          options.forEach(o => o.classList.toggle('active', o === opt));
          picker.classList.remove('open');
        });
      });
    </script>
  </body>
</html>
